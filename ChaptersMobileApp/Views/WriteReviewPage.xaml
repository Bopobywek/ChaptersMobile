<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChaptersMobileApp.Views.WriteReviewPage"
             Title="WriteReviewPage">
    <StackLayout Padding="20">

        <Label Text="Write a Review" FontSize="Title" HorizontalOptions="Center" Margin="0,20,0,10"/>

        <!-- Title Entry -->
        <Entry x:Name="TitleEntry" Text="{Binding Title}" Placeholder="Title" Margin="0,0,0,10" />

        <!-- Text Entry (max 10000 chars) -->
        <Editor x:Name="TextEditor" Text="{Binding Text}" Placeholder="Write your review (max 10000 characters)" MaxLength="10000" Margin="0,0,0,10" />

        <!-- Button to submit the review -->
        <Button Text="Оставить рецензию" Command="{Binding WriteReviewCommand}" />

    </StackLayout>
</ContentPage>