<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:ChaptersMobileApp.Views"
       xmlns:mainViews="clr-namespace:ChaptersMobileApp"
       x:Class="ChaptersMobileApp.AppShell"
       BackgroundColor="#FFFEFA">
    
    <TabBar>
        <Tab Title="Читаемое">
            <ShellContent ContentTemplate="{DataTemplate views:ReadingListPage}" />
        </Tab>
        <Tab Title="Подписки">
            <ShellContent ContentTemplate="{DataTemplate views:SubscriptionsPage}" />
        </Tab>
        <Tab Title="Рейтинг">
            <ShellContent ContentTemplate="{DataTemplate views:RatingPage}" />
        </Tab>
        <Tab Title="Профиль">
            <ShellContent ContentTemplate="{DataTemplate views:ProfilePage}" />
        </Tab>
    </TabBar>
</Shell>
